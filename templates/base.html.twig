<!DOCTYPE html>
<html lang="fr">
	<head>
		{% block meta %}
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1">
		{% endblock %}


		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
			<style>

				.video {
					height: 80vh;
				}
				.nav-link {
					color: grey !important;
				}
				.active {
					color: white !important;
				}
				.bg-white:hover {
					opacity: 0.7;
				}
			</style>

		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
		{% endblock %}


	</head>
	{% set route_name = app.request.attributes.get('_route') %}

	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand h1 text-danger bg-white rounded p-1" href={{path('app_home')}}>YoutubeStorage</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a {% if route_name == "app_home" %} class="nav-link active" {% elseif route_name == "app_video" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href=" {{path('app_home')}} ">Home</a>
						</li>
						<li class="nav-item">
							<a {% if route_name == "app_add" %} class="nav-link active" {% else %} class="nav-link" {% endif %} aria-current="page" href={{path('app_add')}}>Add</a>
						</li>


					</ul>
				</div>
			</div>
		</nav>
		<div id="count" data-count="{{video_count()}}" class="container"> {% block body %}{% endblock %}
			</div>


		</body>
	</html>
	